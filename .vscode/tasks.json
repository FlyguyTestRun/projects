{
  "//": "==============================================================================",
  "//2": "VS Code Tasks Configuration",
  "//3": "==============================================================================",
  "//4": "Location: .vscode/tasks.json",
  "//5": "Purpose: Automate common development tasks",
  "//6": "Usage: Ctrl+Shift+P â†’ 'Tasks: Run Task'",
  "//7": "==============================================================================",

  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-compose-up",
      "type": "shell",
      "command": "docker compose up -d",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "docker-compose-down",
      "type": "shell",
      "command": "docker compose down",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "docker-compose-logs",
      "type": "shell",
      "command": "docker compose logs -f",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "docker-build",
      "type": "shell",
      "command": "docker compose build --no-cache",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "docker-rebuild-and-start",
      "type": "shell",
      "command": "docker compose down && docker compose build --no-cache && docker compose up -d",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "pytest-all",
      "type": "shell",
      "command": "pytest tests/ -v --cov=src --cov-report=html --cov-report=term-missing",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "pytest-current",
      "type": "shell",
      "command": "pytest ${file} -v -s",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "format-code",
      "type": "shell",
      "command": "black src/ tests/ && isort src/ tests/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "lint-code",
      "type": "shell",
      "command": "pylint src/ && flake8 src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "type-check",
      "type": "shell",
      "command": "mypy src/",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "clean-python-cache",
      "type": "shell",
      "command": "find . -type d -name '__pycache__' -exec rm -rf {} + && find . -type f -name '*.pyc' -delete",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "docker-prune",
      "type": "shell",
      "command": "docker system prune -af --volumes",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "install-dependencies",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "generate-requirements",
      "type": "shell",
      "command": "pip freeze > requirements.txt",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    }
  ]
}